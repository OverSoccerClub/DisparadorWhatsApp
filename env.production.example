# Variáveis de ambiente para produção
# Copie este arquivo para .env.production e configure os valores

# Configurações do Next.js
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
PORT=3000

# Configurações do Supabase
NEXT_PUBLIC_SUPABASE_URL=https://seu-projeto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=sua-chave-publica-supabase
SUPABASE_SERVICE_ROLE_KEY=sua-chave-service-role-supabase

# Configurações de autenticação
JWT_SECRET=sua-chave-jwt-super-secreta-aqui-minimo-32-caracteres
JWT_EXPIRES_IN=7d

# Configurações da Evolution API
EVOLUTION_API_URL=https://sua-evolution-api.com
EVOLUTION_API_KEY=sua-chave-evolution-api

# Configurações do WAHA
WAHA_API_URL=https://sua-waha-api.com
WAHA_API_KEY=sua-chave-waha-api

# Configurações de banco de dados (se usando PostgreSQL direto)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/whatsapp_dispatcher

# Configurações de Redis (opcional)
REDIS_URL=redis://localhost:6379

# Configurações de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-app

# Configurações de monitoramento (opcional)
SENTRY_DSN=https://sua-dsn-sentry.com

# Configurações de logs
LOG_LEVEL=info
LOG_FORMAT=json
